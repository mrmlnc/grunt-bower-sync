{
  "name": "grunt-bower-sync",
  "description": "Synchronizing Bower dependencies, with the possibility of compiling a list",
  "version": "1.0.1",
  "author": {
    "name": "Denis Malinochkin",
    "url": "canonium.com"
  },
  "repository": "mrmlnc/grunt-bower-sync",
  "license": "MIT",
  "keywords": [
    "gruntplugin",
    "grunt",
    "bower",
    "sync",
    "bowersync",
    "copy",
    "synchronization"
  ],
  "dependencies": {
    "array-differ": "^2.0.3",
    "fs-extra": "^0.30.0",
    "promise": "^7.1.1"
  },
  "devDependencies": {
    "grunt": "~1.0.1",
    "mocha": "^3.0.2",
    "rimraf": "^2.5.4",
    "xo": "^0.16.0"
  },
  "engines": {
    "node": ">= 0.10.0"
  },
  "scripts": {
    "pretest": "rimraf tmp && xo",
    "test": "grunt bowersync && mocha test/test.js"
  },
  "files": [
    "lib",
    "tasks"
  ],
  "xo": {
    "space": true,
    "rules": {
      "object-curly-spacing": [
        2,
        "always"
      ],
      "space-before-function-paren": 0
    },
    "envs": [
      "node",
      "mocha"
    ]
  }
}
